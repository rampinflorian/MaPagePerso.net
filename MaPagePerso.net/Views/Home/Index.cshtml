<!-- ======= My Portfolio Section ======= -->
<section id="portfolio" class="portfolio">
    <div class="container">

        <div class="section-title">
            <span>MES PROJETS</span>
            <h2>Mes Projets</h2>
            <p><i>Parce qu'un bon développeur doit pouvoir présenter quelques projets...</i></p>
        </div>

        <div class="row portfolio-container">

            @foreach (Project project in Model.Projects)
            {
                <div class="col-lg-4 col-md-6 portfolio-item filter-web">
                    <div class="portfolio-img">
                        <img src="~/images/projects/@project.Image" class="img-fluid" alt="">
                    </div>
                    <div class="portfolio-info">
                        <h4>@project.Title</h4>
                        <p>@project.Language</p>
                        <a href="~/images/projects/@project.Image" data-gallery="portfolioGallery" class="portfolio-lightbox preview-link" title="@project.Title">
                            <i class="bx bx-plus"></i>
                        </a>
                        @*<a asp-controller="Project" asp-action="Details" asp-route-id="@project.Id" class="details-link" title="More Details">
                            <i class="bx bx-link"></i>
                        </a>*@
                    </div>
                </div>
            }



        </div>

    </div>
</section><!-- End My Portfolio Section -->


