                        <div class="col-md-6 form-group">
                            <input type="text" asp-for="mailer.Username" required="required" class="form-control" placeholder="Nom" required>
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            @Html.ReCaptcha()
                        </div>
                        <div class="col-md-6 form-group mt-3 mt-md-0">
                            <input type="email" class="form-control" asp-for="mailer.Mail" placeholder="Email" required>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <textarea class="form-control" asp-for="mailer.Content" rows="6" placeholder="Message" required></textarea>
                    </div>
                    <div class=" mt-3 text-center">
                        <button class="btn btn-sm btn-primary" type="submit">Envoyer</button>
                    </div>
                </form>
            </div>

        </div>

