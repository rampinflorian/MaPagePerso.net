@{
    ViewData["Title"] = "Mes projets";
}

<div class="box box-content">
    <div class="pb-2">
        <h1 class="title title--h1 first-title title__separate">Mes projets</h1>
    </div>

    <!-- News -->
    <div class="news-grid">
        <!-- Post -->
        @foreach (Project p in Model)
        {
            <article class="news-item box">
                <div class="news-item__image-wrap overlay overlay--45">
                    <div class="news-item__date">@p.Language</div>
                    <img class="cover lazyload" src="~/images/projects/@p.Image" alt="@p.Title"/>
                </div>
                <div class="news-item__caption">
                    <h2 class="title title--h4">@p.Title - <small>@p.CreatedAt.ToString("yyyy")</small></h2>
                    <p>@p.Description</p>
                </div>
            </article>   
        }
    </div>
</div>